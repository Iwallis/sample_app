<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div>
    <% if @user.flights.any? %>
      <table class="table .table-sm table-hover table-striped table-bordered table-responsive flights" %>
        <thead>
          <tr>
            <th scope="col">Date</th>
            <th scope="col">Type</th>
            <th scope="col">ident</th>
            <th scope="col">Pilot In Command</th>
            <th scope="col">Co-pilot/Student</th>
            <th scope="col">Hours Day</th>
          </tr>
      </thead>
      <tbody>
        <%= render @flights %>
      </tbody>
      <%= will_paginate @flights %>
    </table>
    <% end %>
  </div>
</div>
