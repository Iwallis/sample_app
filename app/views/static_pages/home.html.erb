<!-- center and jumbotron are bootstrap styles -->
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="flight_form">
        <%= render 'shared/flight_form' %>
      </section>
    </aside>
  </div>
<% else %>

<div class="center jumbotron">
  <h1>Welcome to Simple Logbook</h1>

  <h2>
    This is the home page for the logbook application in development by Iain
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: "Rails logo"),
            'http://rubyonrails.org/' %>
<% end %>
