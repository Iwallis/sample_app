<!DOCTYPE html>
<html>
  <head>
    <!-- normal header items (stylesheet, scripts, etc...) -->
    <%= render 'layouts/rails_default' %>
    <!-- IE compatibility for ie9 and earlier -->
    <%= render 'layouts/shim' %>
  </head>

  <body>
    <% if action_name != "printer_friendly" %>
      <%= render 'layouts/header' %>
    <% end %>
    <div class="main-content">
      <% if action_name != "printer_friendly" %>
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
      <% end %>
      <%= yield %>
    </div>
    <% if action_name != "printer_friendly" %>
      <%= render 'layouts/footer' %>
      <!-- below displays debug info only if rails is in development mode -->
      <%= debug(params) if Rails.env.development? %>
    <% end %>
  </body>
</html>
